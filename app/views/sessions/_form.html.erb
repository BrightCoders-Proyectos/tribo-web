<%= form_for :session, url: session_path do |form| %>
  <div class="flex flex-col items-center px-4 py-2 md:px-12 lg:px-16 lg:py-14">
    <div class="content-center text-center py-4 md:w-max lg:w-full mt-2.5"> 
      <%= render "shared/header_stamp" %>
      <h2 class="w-80 md:w-11/12 md:ml-12">Para continuar inicia sesión en tribo</h2>
    </div>  
      
      <div class="text-field mt-8 md:w-2/3 lg:w-8/12">
        <%= form.text_field :email, type: 'email', class: "input-field w-60 md:w-full", placeholder: "Correo electrónico" %>
      </div>

      <div class="password-field mt-4 md:w-2/3 lg:w-8/12">
        <%= form.password_field :password, class: "input-field w-60 md:w-full", placeholder: "Contraseña" %>
      </div>

      <div class="submit-field mt-8 md:w-2/3 lg:w-80">
        <%= form.submit "Inicia sesión", class: 'button btn-prim justify-center w-60 md:w-full' %>
      </div>

      <hr class="w-60 mt-8 md:w-2/3 lg:w-80">

      <div class="other-links mt-4">
        <% if Clearance.configuration.allow_sign_up? %>
         <p class="text-xs md:text-sm">¿Aún no tienes cuenta? <%= link_to "Regístrate aquí", sign_up_path, class: 'text-tribo' %></p>
        <% end %>
        <!--
        <%= link_to t(".forgot_password"), new_password_path %>
        -->
      </div>
    </div>
  </div>
<% end %>
