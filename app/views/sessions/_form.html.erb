<%= form_for :session, url: session_path do |form| %>
  <div class="flex flex-col items-center px-4 py-2 md:px-32 lg:px-60 py-10 lg:py-14">
    <div class="text-center py-4 mt-2.5"> 
      <%= render "shared/header_stamp" %>
      <h2 class="w-80">Para continuar inicia sesión en tribo</h2>
    </div>  
      
      <div class="text-field mt-8">
        <%= form.text_field :email, type: 'email', class: "input-field w-60", placeholder: "Correo electrónico" %>
      </div>

      <div class="password-field mt-4">
        <%= form.password_field :password, class: "input-field w-60", placeholder: "Contraseña" %>
      </div>

      <div class="submit-field mt-8">
        <%= form.submit "Inicia sesión", class: 'button btn-prim justify-center w-60' %>
      </div>

      <hr class="w-60 mt-8">

      <div class="other-links mt-4">
        <% if Clearance.configuration.allow_sign_up? %>
         <p class="text-xs">¿Aún no tienes cuenta? <%= link_to "Regístrate aquí", sign_up_path, class: 'text-tribo' %></p>
        <% end %>
        <!--
        <%= link_to t(".forgot_password"), new_password_path %>
        -->
      </div>
    </div>
  </div>
<% end %>
