<div class="flex flex-col items-center px-4 py-12 md:px-32 lg:px-60 py-10 lg:py-14">
  <div id="clearance" class="sign-up flex flex-col">
    <%= render "shared/header_stamp" %>

    <h3><%= t(".Edit my account") %></h3>

    <%= form_for @user do |form| %>
      <div class="text-field mt-6">
        <h5><%= form.label :name %></h5>
        <%= form.text_field :name, class: 'input-field w-full mt-1' %>
      </div>

      <div class="text-field mt-4">
        <h5><%= form.label :email %></h5>
        <%= form.text_field :email, class: 'input-field w-full mt-1' %>
      </div>

      <h5 class="text-tribo mt-4"><%= link_to 'Cambiar contraseÃ±a', edit_user_password_path(@user)%></h5>

      <div class="submit-field flex flex-row items-center mt-8">
        <%= form.submit class: 'button btn-prim mt-2 mr-1 w-40 justify-center'%>
        <%= submit_tag 'Cancel', class: 'button btn-neutral mt-2 w-40 justify-center' %>
      </div>
    <% end %>
  </div>
</div>
