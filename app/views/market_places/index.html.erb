  <div style="width: 100%; height: 86.5vh" data-maps-target="map">
  </div>
</div>

<%= render "shared/sidebar" %>



<!-- Mi cuenta -->
<div id="modal-register" class="flex flex-wrap modal-bg bg-transparent absolute transition-opacity duration-500 hidden pt-10 fixed w-full h-full top-0 left-0 z-50 overflow-auto">
  <div class="flex-col modal-content m-auto bg-white w-2/6 shadow-lg rounded-lg">
    <div class="p-4">
      <span id="modal-register" class="modal-close float-right hover:text-gray-300 no-underline cursor-pointer">
        <div class="mr-2 ml-auto mt-2 fill-current w-6 h-6 cursor-pointer">
          <i class="fas fa-times"></i>
        </div>
      </span>
    </div>
    <div class="text-justify ml-6">
      <h3>Mi cuenta</h3>
    </div>

    <% @market_places.each do |market_place| %>
     <% if current_user.email == User.find(market_place.user_id).email %>
        <div class="grid grid-cols-2 mt-2.5 ml-6">
      <div clas="col-start-1 col-end-2">
        <h5>Nombre completo</h5>
            <p><%= User.find(market_place.user_id).name %></p>
      </div>
      <div clas="col-start-2 col-end-3">
        <h5>Telefono</h5>
            <p><%= User.find(market_place.user_id).phone %></p>
      </div>
    </div>
    <div class="text-justify py-4 mt-2.5 ml-6">
          <h3>Mis negocios</h3>
    </div>
    <hr width="90%" class="ml-5">
        <%break%>
      <%end%>
    <%end%>

    <!-- ------------------------ Market places ------------------------------ -->
    <% @market_places.each do |market_place| %>
      <% if current_user.email == User.find(market_place.user_id).email %>
        <div class="grid grid-cols-1 ml-6">
          <h5>Nombre</h5>
          <p><%= market_place.business_name %></p>
          <h5>Direccion</h5>
          <p><%= market_place.address %></p>
      </div>

      <div class="grid grid-cols-2 grid-rows-4 ml-6">
          <div>
            <h5>Giro</h5>
            <p><%= market_place.business_line %></p>
          </div>
      
          <div>
            <h5>Vendiendo</h5>
            <p><%= market_place.selling %></p>
          </div>

          <div>
            <h5>Forma(s) de pago</h5>
            <p><%= market_place.payment %></p>
          </div>
      
          <div>
            <h5>Tipo(s) de entrega</h5>
            <p><%= market_place.pickup_type %></p>
          </div>

          <div>
            <h5>Servicio a domicilio</h5>
            <p><%= market_place.service_days %></p>
          </div>
      
          <div>
           <h5>Horario</h5>
            <p><%= market_place.open_hour.strftime('%H:%M') %> a <%= market_place.close_hour.strftime('%H:%M') %></p>
          </div>

          <div>
            <%= button_to 'Eliminar', edit_market_place_path(market_place), method: 'get', class: 'button btn-neutral ml-6 mt-3' %>
          </div>

          <div>
            <%= button_to 'Editar', edit_market_place_path(market_place), method: 'get', class: 'button btn-sec ml-6 mt-3' %>
          </div>

          </div> <!-- End Grid Mis negocios-->
            <hr width="90%" class="ml-5">
        <% end %>
        <% if market_place == @market_places.last %>
          <div align="center" class="ml-0">
            <%= button_to 'Añadir nuevo negocio', new_market_place_path(market_place), method: 'get', class: 'button btn-prim w-full md:w-3/4' %>
          </div>

          <div align="center">
            <%= button_to 'Borrar cuenta', new_market_place_path(market_place), method: 'get', class: 'button btn-neutral w-full md:w-1/2' %>
          </div>

          <div align="center">
            <%= button_to 'Editar info', new_market_place_path(market_place), method: 'get',class: 'button btn-sec w-full md:w-1/2' %>
          </div>    
          <% end %>
    <% end %>

        <hr width="90%" class="ml-5">
      <% end %>
      <% if market_place == @market_places.last %>
        <div align="center">
          <%= button_to 'Añadir nuevo negocio', new_market_place_path(market_place), method: 'get', class: 'button btn-prim' %>
        </div>

        <div align="center">
          <%= button_to 'Borrar cuenta', new_market_place_path(market_place), method: 'get', class: 'button btn-neutral' %>
        </div>

        <div align="center">
          <%= button_to 'Editar info', new_market_place_path(market_place), method: 'get',class: 'button btn-sec' %>
        </div>
      <% end %>
    <% end %>
        <!-- ---------------------   End Market Places --------------------------- -->

    </div>
  </div>
</div>
