<div class="flex flex-col items-center px-6 py-16 md:px-32 lg:px-60 py-10 lg:py-14">
  <div id="clearance" class="password-reset flex flex-col">
    <%= render "shared/header_stamp" %>
    <h3 class="header-3-4"><%= t(".title") %></h3>

    <p class="mt-4 mb-6"><%= t(".description") %></p>

    <%= form_for :password, url: passwords_path do |form| %>
      <div class="text-field mt-6">
        <h5 class="header-5">Correo electrónico</h5>
        <%= form.text_field :email, type: 'email', class: 'input-field w-full mt-1' %>
      </div>

      <div class="password-field mt-6">
        <h5 class="header-5">Contraseña</h5>
        <%= form.password_field :password, class: 'input-field w-full mt-1' %>
      </div>

      <div class="submit-field flex flex-row items-center mt-6">
        <%= form.submit 'Enviar' ,class: 'button btn-prim mr-1 w-40 justify-center' %>
        <%= submit_tag 'Cancelar', class: 'button btn-neutral w-40 justify-center' %>
      </div>
    <% end %>
  </div>
</div>
