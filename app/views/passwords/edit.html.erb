<div id="clearance" class="password-reset">
  <h2 class="header-2"><%= t(".title") %></h2>

  <p class="mb-6"><%= t(".description") %></p>

  <%= form_for :password_reset,
    url: user_password_path(current_user, token: current_user.confirmation_token),
    html: { method: :put } do |form| %>
    <div class="password-field">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>

    <div class="submit-field">
      <%= form.submit %>
    </div>
  <% end %>
</div>
